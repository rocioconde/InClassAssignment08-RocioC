<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.android.inclassassignment08_rocioc.SecondActivity">

    <EditText
        android:id="@+id/family_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Family Last Name" />

    <EditText
        android:id="@+id/number_of_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Members"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/coming_to_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is the family coming to the party?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Firebase"
        android:layout_gravity="center"
        android:onClick="addToFirebase" />


</LinearLayout>
